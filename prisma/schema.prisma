// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
enum Exchange {
    binance
}


generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
    
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    exchangeApiKey String?   @unique
    exchangeApiSecret String?   @unique
    exchangeName Exchange?
    accounts      Account[]
    sessions      Session[]
    coins        UserCoin[] 
    stats UserStats[]
    @@index([exchangeName])
}

model UserStats {
    id String @id @default(cuid())
    userId String
    totalInvestedCash Float @default(0) 
    totalInvestedQuantity Float @default(0)
    totalSoldCash Float @default(0)
    totalSoldQuantity Float @default(0)
    totalProfitLoss Float @default(0)
    totalEarnings Float @default(0)
    totalEarningsCashedOut Float @default(0)
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model UserCoin {
    name String @id
    userId String
    investedCash Float
    investedQuantity Float
    soldCash Float
    soldQuantity Float
    profitLoss Float
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    @@unique([name, userId])
}

model TradeConfig{
    name String @id
    isTradingActive Boolean @default(false)
}
